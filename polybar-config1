[module/poweroff]
type = custom/script
exec = echo " \uf011 "
click-left = rofi -modi run,drun,window -show drun
click-right = i3lock-fancy -pg &
click-middle = /usr/bin/rofi-logout
format-padding = 1

[module/rofi]
type = custom/script
exec = echo " \uf038 "
click-left = rofi -modi run,drun,window -show drun
format-padding = 1

